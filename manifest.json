{
    "action": {
        "default_popup": "popup/PopupView.html",
        "default_title": "Click Me!",
        "default_icon": {
            "16": "images/icon_16.png",
            "32": "images/icon_32.png"
        }
    },
    "author": "mh-anwar",
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "mohammad@anwar.app"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "description": "FocusGuard keeps you focussed.",
    "host_permissions": ["<all_urls>"],
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "manifest_version": 3,
    "name": "FocusGuard",
    "options_ui": {
        "page": "options/OptionsView.html",
        "open_in_tab": true
    },
    "permissions": ["storage"],
    "web_accessible_resources": [
        {
            "resources": ["./refocus/RefocusView.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "short_name": "FocusGuard",
    "version": "1.0.0"
}
